{
  "name": "cypress-boilerplate",
  "version": "1.1.0",
  "description": "Boilerplate for cypress project",
  "author": "The Software House sp. z. o. o.",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --headless --browser chrome",
    "cy:run:firefox": "cypress run --headless --browser firefox",
    "cy:run:edge": "cypress run --headless --browser edge",
    "cy:start": "npm run reports:clean; npm run cy:run; npm run reports:merge; npm run reports:generate; exit ${PIPESTATUS[1]}",
    "cy:start:chrome": "npm run reports:clean; npm run cy:run:chrome; npm run reports:merge; npm run reports:generate; exit ${PIPESTATUS[1]}",
    "cy:start:firefox": "npm run reports:clean; npm run cy:run:firefox; npm run reports:merge; npm run reports:generate; exit ${PIPESTATUS[1]}",
    "cy:start:edge": "npm run reports:clean; npm run cy:run:edge; npm run reports:merge; npm run reports:generate; exit ${PIPESTATUS[1]}",
    "format": "npm run prettier && npm run lint",
    "lint": "eslint  \"cypress/**/*.ts\" --fix --ignore-path=\".gitignore\"",
    "prettier": "prettier --write .",
    "reports:clean": "rm -rf cypress/reports/integration",
    "reports:generate": "marge cypress/reports/report.json --reportDir cypress/reports",
    "reports:merge": "mochawesome-merge cypress/reports/integration/*.json > cypress/reports/report.json"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "cypress": "8.2.0",
    "cypress-file-upload": "5.0.8",
    "cypress-iframe": "1.0.1",
    "cypress-plugin-tab": "1.0.5",
    "cypress-wait-until": "1.7.1",
    "cypress-xpath": "1.6.2",
    "dotenv": "10.0.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "2.11.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-import-alias": "1.2.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.24.0",
    "faker": "5.5.3",
    "fs-extra": "10.0.0",
    "mocha": "9.0.1",
    "mochawesome": "6.2.2",
    "mochawesome-merge": "4.2.0",
    "mochawesome-report-generator": "5.2.0",
    "prettier": "2.3.2",
    "typescript": "4.3.4"
  }
}
